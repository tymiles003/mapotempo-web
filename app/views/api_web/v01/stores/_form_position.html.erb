<div id="edit-position">
<%= twitter_bootstrap_form_for(@store, url: api_web_v01_update_position_store_path(@store), default_label_class: 'col-md-4 control-label', layout: :horizontal, html: {class: "form-horizontal", "data-destination_id" => (@store.id or 0)}) do |f| %>
  <%= render 'shared/error_messages', model: @store %>
  <%= f.number_field :lat, { step: 'any'} %>
  <%= f.number_field :lng, { step: 'any'} %>
  <%= f.actions do %>
    <%= f.submit %>
  <% end %>
<% end %>
</div>
<div id="map"></div>
<%
controller.js(
  destination_id: @store.id || 0,
  map_layer_url: request.ssl? ? current_user.layer.urlssl : current_user.layer.url,
  map_lat: @store.customer.default_position[:lat],
  map_lng: @store.customer.default_position[:lng],
  map_attribution: current_user.layer.map_attribution
)
%>
