<% content_for :title, @planning.name %>

<%= button_tag class: 'btn btn-primary btn-print' do %>
  <i class="fa fa-print fa-fw"></i> <%= t '.button' %>
<% end %>

<ol class="routes-print">
  <% @planning.routes.select { |route| route.vehicle_usage && route.size_active > 0 }.each { |route| %>
    <%= render 'routes/show', route: route %>
  <% } %>
</ol>

<%
  controller.js(
    print_map: @planning.customer.print_map
  )
%>
