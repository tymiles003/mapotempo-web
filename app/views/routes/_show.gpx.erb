  <rte>
    <name>
      <%= [
        route.planning.name,
        route.ref,
        route.vehicle_usage.vehicle.name,
        route.planning.customer.enable_orders && route.planning.order_array ? route.planning.order_array.name : nil,
        route.planning.date ? l(route.planning.date) : nil,
      ].select{ |i| i }.join(' - ').gsub(/\s+/, ' ').strip
    %>
    </name>
    <desc>
      <%= route.size_active %> <%= I18n.t 'plannings.edit.stops' %>
      <%= ("%i:%02i" % [(route.end - route.start)/60/60, (route.end - route.start)/60%60]) if route.start && route.end %>
      <%= number_to_human(route.distance, units: :distance, precision: 3) %>
    </desc>
    <% if !route.vehicle_usage.store_start.nil? && !route.vehicle_usage.store_start.lat.nil? && !route.vehicle_usage.store_start.lng.nil? %>
    <rtept lat="<%= route.vehicle_usage.store_start.lat %>" lon="<%= route.vehicle_usage.store_start.lng %>">
      <name>
        <%= route.vehicle_usage.store_start.name %>
      </name>
      <desc><%= route.start.strftime("%H:%M") if route.start %>
<%= [route.vehicle_usage.store_start.street, route.vehicle_usage.store_start.postalcode, route.vehicle_usage.store_start.city, route.vehicle_usage.store_start.country].select{ |i| i && i.length > 0 }.join(', ') %>.
      <% if route.stop_out_of_drive_time %>
<%= t 'plannings.edit.error.out_of_drive_time' %>
      <% end %>
      </desc>
    </rtept>
    <% end %>
<%
index = 0
route.stops.each{ |stop|
  if stop.active && stop.position?
%>
    <rtept lat="<%= stop.lat %>" lon="<%= stop.lng %>">
      <name>
        <%= [
          index += 1,
          '-',
          stop.ref,
          ' ',
          stop.name,
          ' ',
          stop.is_a?(StopDestination) ? (route.planning.customer.enable_orders ? (stop.order ? stop.order.products.collect(&:code).join(',') : '') : stop.destination.quantity && stop.destination.quantity > 1 ? "тип#{stop.destination.quantity}" : '') : '',
          ' ',
          stop.is_a?(StopDestination) ?
            (stop.destination.take_over ? '(' + stop.destination.take_over.strftime("%H:%M:%S") + ')' : '') :
            '(' + route.vehicle_usage.rest_duration.strftime("%H:%M:%S") + ')'
        ].join.gsub(/\s+/, ' ').strip
        %>
      </name>
      <desc><%= stop.time.strftime("%H:%M") if stop.time %>
      <% if stop.open || stop.close %>
<%= stop.open.strftime("%H:%M") if stop.open %>-<%= stop.close.strftime("%H:%M") if stop.close %>
      <% end %>
<%= [stop.street, stop.detail, stop.postalcode, stop.city, stop.country].select{ |i| i && i.length > 0 }.join(', ') %>.
      <% if stop.comment && stop.comment.length > 0 %>
<%= stop.comment %>
      <% end %>
      <% if stop.is_a?(StopDestination) && stop.destination.tags.size > 0 %>
<%= stop.destination.tags.collect { |tag| tag.label }.join(', ') %>
      <% end %>
      <% if stop.out_of_window %>
<%= t 'plannings.edit.error.out_of_window' %>
      <% end %>
      <% if stop.out_of_capacity %>
<%= t 'plannings.edit.error.out_of_capacity' %>
      <% end %>
      <% if stop.out_of_drive_time %>
<%= t 'plannings.edit.error.out_of_drive_time' %>
      <% end %>
      </desc>
    </rtept>
<%
  end
}
%>
    <% if !route.vehicle_usage.store_stop.nil? && !route.vehicle_usage.store_stop.lat.nil? && !route.vehicle_usage.store_stop.lng.nil? %>
    <rtept lat="<%= route.vehicle_usage.store_stop.lat %>" lon="<%= route.vehicle_usage.store_stop.lng %>">
      <name>
        <%= route.vehicle_usage.store_stop.name %>
      </name>
      <desc><%= route.end.strftime("%H:%M") if route.end %>
<%= [route.vehicle_usage.store_stop.street, route.vehicle_usage.store_stop.postalcode, route.vehicle_usage.store_stop.city, route.vehicle_usage.store_stop.country].select{ |i| i && i.length > 0 }.join(', ') %>.
      <% if route.stop_out_of_drive_time %>
<%= t 'plannings.edit.error.out_of_drive_time' %>
      <% end %>
      </desc>
    </rtept>
    <% end %>
  </rte>
