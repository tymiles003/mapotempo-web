<% content_for :title, t('.title') %>
<h1><%= t '.title' %></h1>

<div class="row">
  <div class="col-md-6">
    <%= link_to new_zoning_path, class:"btn btn-primary btn-sm" do %><i class="fa fa-plus fa-fw"></i> <%= t '.new' %><% end %>
  </div>
  <div class="col-md-6">
    <div class="pull-right">
      <%= @zonings.count %> <%= t 'activerecord.models.zonings', count: @zonings.count %>
    </div>
  </div>
</div>

<%= form_tag zonings_path, method: :delete do %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><button id="add" type="button" class="btn btn-default btn-xs index_toggle_selection" title="<%= t 'all.verb.toggle_selection' %>"><i class="fa fa-check fa-fw"></i></button></th>
      <th><%= t 'activerecord.attributes.zoning.name' %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @zonings.each do |zoning| %>
      <tr>
        <td><%= check_box_tag("zonings[#{zoning.id}]") %></td>
        <td><%= zoning.name %></td>
        <td class="text-right">
          <%= link_to zoning_duplicate_path(zoning), :class => "btn btn-default btn-sm", method: :patch do %><i class="fa fa-copy fa-fw"></i> <%= t 'all.verb.duplicate' %><% end %>
          <%= link_to edit_zoning_path(zoning), :class => "btn btn-primary btn-sm" do %><i class="fa fa-edit fa-fw"></i> <%= t 'all.verb.edit' %><% end %>
          <%= link_to zoning, :class => "btn btn-danger btn-sm", method: :delete, data: { confirm: t('all.verb.destroy_confirm') } do %><i class="fa fa-trash-o fa-fw"></i> <%= t 'all.verb.destroy' %><% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= button_tag type: :submit, class: "btn btn-danger btn-sm", data: { confirm: t('all.verb.destroy_confirm') } do %><i class="fa fa-trash-o fa-fw"></i> <%= t('all.verb.destroy_selection') %><% end %>
<% end %>
